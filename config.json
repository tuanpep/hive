{
    "agent_command": [
        "opencode",
        "run"
    ],
    "agent_mode": "episodic",
    "num_workers": 4,
    "response_timeout_seconds": 120,
    "max_task_duration_seconds": 1800,
    "max_review_cycles": 3,
    "max_restart_attempts": 3,
    "restart_cooldown_seconds": [
        5,
        15,
        60
    ],
    "completion_marker": "### TASK_DONE ###",
    "stop_tokens": [
        "TASK_COMPLETED",
        "### TASK_DONE ###"
    ],
    "log_directory": "./logs",
    "log_level": "info",
    "recover_in_progress_on_startup": true,
    "tasks_file": "tasks.json",
    "work_directory": "."
}